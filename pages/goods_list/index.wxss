.goods_content{
   
}
.goods_item{
    display: flex;
    border-top:4rpx solid #eee ;
    padding: 20rpx;
}
.goods_img{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}
.goods_img image{
    width: 80%;
}
.goods_info{
    flex: 2;
    display: flex;
    font-size: 30rpx;
    flex-direction: column;
    justify-content: space-around;
    /* padding: 20rpx */
}
.item_title{
    display: -webkit-box;
    overflow: hidden;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical
}
.item_price{
    color: red;
    font-size: 34rpx;
}