.goods_item{
    display: flex;
    border-bottom:1rpx solid #eee ;
    padding: 10rpx 0;
}
.goods_content .goods_item .goods_img{
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}
.goods_img image{
    width: 80%;
    height: 100%;
}
.goods_info{
    flex: 2;
    display: flex;
    padding: 20rpx;
    font-size: 30rpx;
    flex-direction: column;
    justify-content: space-around;
    /* padding: 20rpx */
}
.item_title{
    display: -webkit-box;
    overflow: hidden;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical
}
.item_price{
    color: red;
    font-size: 34rpx;
}
.list_no_more{
    text-align: center;
    height: 150rpx;
    line-height: 150rpx;
}